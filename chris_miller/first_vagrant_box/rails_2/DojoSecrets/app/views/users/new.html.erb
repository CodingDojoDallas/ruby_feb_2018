<!DOCTYPE html>
<html>
	<head>
		<title></title>
	</head>
	<body>

			<% if flash[:errors] %>
				<% flash[:errors].each do |e| %>
				<p><%= e %></p>
				<% end %>
			<% end %>
		<form action="/users" method="post">
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			Name<input type="text" name="user_form[name]">
			Email<input type="email" name="user_form[email]">
			Password<input type="password" name="user_form[password]">
			Confirm Password<input type="password" name="user_form[password_confirmation]">
			<input type="submit" value="Join">
		</form>

	</body>
</html>