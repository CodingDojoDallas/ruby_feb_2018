<h1>Dojo Students</h1>

<table>
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Actions</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <% @students.each do |student| %>
    <tbody>
        <tr>
            <td><%= student.fname %></td>
            <td><%= student.lname %></td>
            <td><%= student.email %></td>
            <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>'>Show!</a></td>
            <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit'>Edit!</a></td>
            <td><a href='/dojos/<%= @dojo.id %>/students/<%= student.id %>' data-method = "delete">Destroy!</a></td>
        </tr>
    </tbody>
    <% end %>
</table>

<a href = "/">Home</a>  |  <a href = "/dojos/<%= @dojo.id %>/students/new">New Student</a>